<UserControl x:Class="InvestmentManage.Presentation.Views.OTCMarket.OTCMarketMainV"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:InvestmentManage.Presentation.Views.OTCMarket"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <md:DialogHost>
            <Grid>
                <Label Content="{Binding MyProperty}"/>
                <Button
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="15"
                    Foreground="{DynamicResource CommonLblFG}"
                    Background="{DynamicResource PrimeColor}"
                    Command="{x:Static md:DialogHost.OpenDialogCommand}"
                    Style="{DynamicResource MaterialDesignIconButton}">
                    <md:PackIcon Kind="Plus"/>
                </Button>

            </Grid>

            <md:DialogHost.DialogContent >
                <StackPanel
                    Background="{DynamicResource MenuBG}">
                    <UserControl 
                        Content="{Binding UcAddOtcPlan}" 
                        MinWidth="150"/>
                    <Button
                        Margin="10"
                        MinHeight="45"
                        FontSize="{Binding MediumFontApp,UpdateSourceTrigger=PropertyChanged}"
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Stretch"
                        Foreground="{DynamicResource PrimeColor}"
                        Content="{Binding LblBtnCloseDialog}"
                        Style="{StaticResource MaterialDesignFlatLightButton}"
                        Command="{x:Static md:DialogHost.CloseDialogCommand}"/>
                </StackPanel>
            </md:DialogHost.DialogContent>
        </md:DialogHost>

    </Grid>
</UserControl>
