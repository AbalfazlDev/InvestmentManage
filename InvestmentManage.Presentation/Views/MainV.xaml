<Window x:Class="InvestmentManage.Presentation.Views.MainV"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InvestmentManage.Presentation.Views" 
        xmlns:crowdfunding="clr-namespace:InvestmentManage.Presentation.Views.CrowdFunding"
        mc:Ignorable="d"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:viewhome="clr-namespace:InvestmentManage.Presentation.Views.Home"
        xmlns:viewSetting="clr-namespace:InvestmentManage.Presentation.Views.Setting"
        Title="MainV" 
        Height="450" 
        Width="700"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"  >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" MaxHeight="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <local:TitleBarWindowV Grid.Row="0"/>

        <Grid 
            Grid.Row="1"
            Background="{DynamicResource MainBG}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <local:MenuV  DataContext="{Binding MenuviewModel}" Margin="20,20,20,20" Grid.Column="0" />

            <!--<viewhome:HomeV Visibility="Hidden" Grid.Column="1" Margin="10,20,10,20" />-->

            <!--<viewSetting:MainSettingV 
                Visibility="Hidden" 
                Grid.Column="1" 
                Margin="10,20,10,20"/>-->

            <ContentControl 
                Grid.Column="1"
                Margin="10"
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch"
                Content="{Binding SelectedView}"  />
            
            <!--<md:Chip
            Content="Crowd funding list"
            Icon="L"
            Margin="10"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Command="{Binding ChipCFList}"
            Grid.Column="1"/>-->

            <md:DrawerHost IsBottomDrawerOpen="{Binding IsSettingView}" Grid.ColumnSpan="3">
                <md:DrawerHost.BottomDrawerContent >
                    <viewSetting:MainSettingV DataContext="{Binding MainSettingviewModel}" Margin="20"/>
                </md:DrawerHost.BottomDrawerContent>
            </md:DrawerHost>
        </Grid>
    </Grid>
</Window>
