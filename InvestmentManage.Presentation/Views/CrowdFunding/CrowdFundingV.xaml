<UserControl x:Class="InvestmentManage.Presentation.Views.CrowdFunding.CrowdFundingV"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InvestmentManage.Presentation.ViewModels.CrowdFunding"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="200">
    <UserControl.DataContext>
        <local:CrowdFundingVM/>
    </UserControl.DataContext>
    <Grid>

        <ListView
            ItemsSource="{Binding CrowdFundingItems}"
            HorizontalAlignment="Center" />
       
    </Grid>
</UserControl>
