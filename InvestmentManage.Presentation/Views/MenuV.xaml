<UserControl x:Class="InvestmentManage.Presentation.Views.MenuV"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:InvestmentManage.Presentation.Views" 
             xmlns:vmmenu="clr-namespace:InvestmentManage.Presentation.ViewModels"
             xmlns:vmthemeset="clr-namespace:InvestmentManage.Presentation.Helpers.ThemeH"
             xmlns:lang="clr-namespace:InvestmentManage.Presentation.ViewModels"
             xmlns:helpers="clr-namespace:InvestmentManage.Presentation.Helpers"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="800"
             d:DesignWidth="250">

    <UserControl.Resources>
        <helpers:EnumToDescriptionConverter x:Key="EnumConverter"/>
        <helpers:MarketIconConverter x:Key="MarketIconConverter"/>
    </UserControl.Resources>


    <Border CornerRadius="20"
            Padding="5"
            Background="{DynamicResource MenuBG}">
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" MaxHeight="150"/>
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <CheckBox
                Grid.Row="2"
                Height="auto"
                Width="auto"
                Margin="10"
                Padding="10"
                
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                FontSize="{Binding MediumFontApp,UpdateSourceTrigger=PropertyChanged}"
                FontFamily="{Binding AppFontFamily}"
                Foreground="{DynamicResource MenuLblCommonFG}"
                IsChecked="{Binding IsDarkMod}"
                Style="{StaticResource MaterialDesignFilterChipPrimaryOutlineCheckBox}">
                <Label
                    Foreground="{DynamicResource MenuLblCommonFG}"
                    Margin="6" 
                    Content="{Binding DarkMode,UpdateSourceTrigger=PropertyChanged}"/>
            </CheckBox>

            <Button 
                Height="auto"
                Width="auto"
                Grid.Row="1"
                Margin="10"
                Padding="10"
                FontSize="{Binding MediumFontApp,UpdateSourceTrigger=PropertyChanged}"
                FontFamily="{Binding AppFontFamily}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Command="{Binding BtnSettings}"
                Foreground="{DynamicResource MenuLblCommonFG}"
                Style="{StaticResource MaterialDesignFlatSecondaryDarkButton}">
                <Button.Content>
                    <StackPanel
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch" 
                        Orientation="Horizontal">
                        <TextBlock
                            Margin="5,0,5,0"
                            FontFamily="Segoe MDL2 Assets"
                            Text="{Binding LblSettingsIcon}"/>
                        <TextBlock
                            Margin="5,0,5,0"
                            FontFamily="Calibri"
                            Text="{Binding LblSettings}"/>
                    </StackPanel>
                </Button.Content>
            </Button>

            <StackPanel>
                <Label 
                    Margin="15,5,0,0" 
                    Foreground="{DynamicResource MenuLblHeadFG}"
                    Content="{Binding MenuItemList}" 
                    FontSize="{Binding SmallFontApp,UpdateSourceTrigger=PropertyChanged}"/>
                <!--<ListBox
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    ItemsSource="{Binding Markets}"
                    SelectedItem="{Binding SelectedMarket, Mode=TwoWay}"
                    Foreground="{DynamicResource MenuLblCommonFG}"
                    Style="{StaticResource MaterialDesignNavigationPrimaryListBox}">

                    -->
                <!--<ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                -->
                <!-- Icon -->
                <!--<Image Source="{Binding Path=., Converter={StaticResource MarketIconConverter}}" 
                                     Width="30" Height="30" Margin="5"/>-->

                <!--Text -->
                <!--
                                <TextBlock HorizontalAlignment="Center" Text="{Binding Path=., Converter={StaticResource EnumConverter}}" 
                                    VerticalAlignment="Center" FontSize="14"/>
                                -->
                <!--<TextBlock HorizontalAlignment="Center" Text="{Binding Path=., Converter={StaticResource MarketTypeToResxConverter}}" 
                                    VerticalAlignment="Center" FontSize="14"/>-->
                <!--
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>-->
                <!--

                    <b:Interaction.Triggers>
                        <b:EventTrigger EventName="SelectionChanged">
                            <b:CallMethodAction MethodName="LBMarketTypes_SelectionChanged" TargetObject="{Binding}"/>
                        </b:EventTrigger>
                        <b:EventTrigger EventName="MouseDoubleClick">
                            <b:CallMethodAction MethodName="LBMarketTypes_MouseDoubleClick" TargetObject="{Binding}"/>
                        </b:EventTrigger>
                    </b:Interaction.Triggers>


                </ListBox>-->

                <ListBox 
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="{Binding MediumFontApp}"
                    Foreground="{DynamicResource MenuLblCommonFG}"
                    Style="{StaticResource MaterialDesignNavigationPrimaryListBox}"
                    ItemsSource="{Binding MenuItemst}"
                    SelectedValuePath="Type"
                    SelectedValue="{Binding SelectedMenuType}" >
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <Label
                                    Foreground="{DynamicResource MenuLblCommonFG}"
                                    FontFamily="Segoe MDL2 Assets"
                                    Content="{Binding Icon}"
                                    FontSize="{Binding DataContext.MediumFontApp, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                    VerticalAlignment="Center"
                                    Margin="0,0,8,0"/>
                                <Label 
                                    Foreground="{DynamicResource MenuLblCommonFG}"
                                    FontSize="{Binding DataContext.MediumFontApp, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                    Content="{Binding DisplayText}"
                                    VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <b:Interaction.Triggers>
                        <b:EventTrigger EventName="SelectionChanged">
                            <b:CallMethodAction MethodName="LBMarketTypes_SelectionChanged" TargetObject="{Binding}"/>
                        </b:EventTrigger>
                        <b:EventTrigger EventName="MouseDoubleClick">
                            <b:CallMethodAction MethodName="LBMarketTypes_MouseDoubleClick" TargetObject="{Binding}"/>
                        </b:EventTrigger>
                    </b:Interaction.Triggers>
                </ListBox>
            </StackPanel>
            <!--<TextBlock Text="{Binding SelectedMarket, Converter={StaticResource EnumConverter}}" 
           FontSize="16" Margin="10"/>-->
           

        </Grid>
    </Border>
</UserControl>
