<Application x:Class="InvestmentManage.Presentation.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:InvestmentManage.Presentation"
             xmlns:helper="clr-namespace:InvestmentManage.Presentation.Helpers"
             xmlns:convertor="clr-namespace:InvestmentManage.Presentation.Helpers.Converter"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
            Startup="Application_Startup">
    <Application.Resources>
        
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="Blue"  SecondaryColor="LightBlue" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />
                <ResourceDictionary Source="Resources/Theme/LightPurpleTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <helper:LocalizationHelper x:Key="Loc" />
            <convertor:MarketTypeToResxConverter x:Key="MarketTypeToResxConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
